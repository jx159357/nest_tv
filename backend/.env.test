# =============================================================================
# Nest TV 后端测试环境配置
# =============================================================================

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=jx159357
DB_DATABASE=nest_tv_test

# 数据库连接池配置
DB_CONNECTION_LIMIT=5
DB_CONNECTION_TIMEOUT=15000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=nest_tv:test:

# Redis连接配置
REDIS_CONNECTION_LIMIT=5
REDIS_CONNECTION_TIMEOUT=3000

# JWT配置
JWT_SECRET=nest-tv-testing-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=1d

# 应用配置
PORT=3335
NODE_ENV=test
HOST=localhost

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=json

# 监控和健康检查
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=mp4,webm
UPLOAD_DESTINATION=./test-uploads

# 弹幕系统配置
DANMAKU_ENABLED=true
DANMAKU_FILTER_PROFANITY=true
DANMAKU_FILTER_SPAM=true
DANMAKU_MAX_LENGTH=50
DANMAKU_CACHE_TTL=600

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=600
CACHE_TTL_MEDIA=1200
CACHE_TTL_USER=1800

# API限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=300
RATE_LIMIT_MAX_REQUESTS=50

# 跨域配置
CORS_ORIGIN=http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept-Language,X-Requested-With

# 安全配置
SECURITY_ENABLED=true
SECURITY_ENABLED=false
SECURITY_CSP=false
SECURITY_XSS_PROTECTION=true

# 压缩配置
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Swagger文档配置
SWAGGER_ENABLED=true
SWAGGER_TITLE=Nest TV Test API
SWAGGER_DESCRIPTION=视频流媒体平台测试API文档
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=/api