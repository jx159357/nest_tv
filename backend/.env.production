# =============================================================================
# Nest TV 后端生产环境配置
# =============================================================================

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=jx159357
DB_DATABASE=nest_tv

# 数据库连接池配置
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=30000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=nest_tv:

# Redis连接配置
REDIS_CONNECTION_LIMIT=10
REDIS_CONNECTION_TIMEOUT=5000

# JWT配置
JWT_SECRET=nest-tv-production-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 应用配置
PORT=3334
NODE_ENV=production
HOST=localhost

# 日志配置
LOG_LEVEL=warn
LOG_FORMAT=json

# 监控和健康检查
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# 文件上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=mp4,mkv,avi,webm,m3u8
UPLOAD_DESTINATION=./uploads

# 弹幕系统配置
DANMAKU_ENABLED=true
DANMAKU_FILTER_PROFANITY=true
DANMAKU_FILTER_SPAM=true
DANMAKU_MAX_LENGTH=100
DANMAKU_CACHE_TTL=3600

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=1800
CACHE_TTL_MEDIA=3600
CACHE_TTL_USER=7200

# API限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100

# 跨域配置
CORS_ORIGIN=https://your-domain.com
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept-Language,X-Requested-With

# 安全配置
SECURITY_ENABLED=true
SECURITY Helmet=true
SECURITY_CSP=true
SECURITY_XSS_PROTECTION=true

# 压缩配置
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Swagger文档配置
SWAGGER_ENABLED=true
SWAGGER_TITLE=Nest TV API
SWAGGER_DESCRIPTION=视频流媒体平台API文档
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=/api