# =============================================================================
# Nest TV 前端测试环境配置
# =============================================================================

# 应用配置
VITE_APP_TITLE=Nest TV Test
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=test

# API配置
VITE_API_BASE_URL=http://localhost:3334/api
VITE_API_TIMEOUT=15000
VITE_API_RETRY_COUNT=3

# WebSocket配置
VITE_WS_URL=ws://localhost:3334
VITE_WS_ENABLED=true

# 认证配置
VITE_AUTH_ENABLED=true
VITE_JWT_STORAGE_KEY=nest_tv_test_jwt_token
VITE_REFRESH_TOKEN_KEY=nest_tv_test_refresh_token

# 功能开关配置
VITE_DANMAKU_ENABLED=true
VITE_LIVE_CHAT_ENABLED=true
VITE_RECOMMENDATIONS_ENABLED=true
VITE_OFFLINE_MODE_ENABLED=false

# 缓存配置
VITE_CACHE_ENABLED=false
VITE_CACHE_TTL=600000
VITE_MEDIA_CACHE_ENABLED=false

# 性能监控配置
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true
VITE_ANALYTICS_ENABLED=false

# UI配置
VITE_THEME=light
VITE_LANGUAGE=zh-CN
VITE_DARK_MODE=false

# 分页配置
VITE_PAGINATION_DEFAULT_SIZE=10
VITE_PAGINATION_MAX_SIZE=50

# 媒体播放器配置
VITE_PLAYER_AUTO_PLAY=true
VITE_PLAYER_MUTE=false
VITE_PLAYER_VOLUME=50
VITE_PLAYER_SPEED=1.0

# 图片懒加载配置
VITE_LAZY_LOADING_ENABLED=true
VITE_LAZY_LOADING_THRESHOLD=50
VITE_IMAGE_PLACEHOLDER=/test-placeholder.jpg

# 开发工具配置
VITE_DEV_TOOLS=true
VITE_CONSOLE_LOGS=true
VITE_SOURCE_MAP=true