# =============================================================================
# Nest TV 前端生产环境配置
# =============================================================================

# 应用配置
VITE_APP_TITLE=Nest TV
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# API配置 - 需要替换为实际域名
VITE_API_BASE_URL=https://your-domain.com/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_COUNT=3
VITE_API_ENCRYPTION=true
VITE_API_CERT_PINNING=true

# WebSocket配置 - 需要替换为实际域名
VITE_WS_URL=wss://your-domain.com
VITE_WS_ENABLED=true
VITE_WS_TIMEOUT=10000
VITE_WS_RECONNECT_ATTEMPTS=5

# 认证配置
VITE_AUTH_ENABLED=true
VITE_JWT_STORAGE_KEY=nest_tv_jwt_token
VITE_REFRESH_TOKEN_KEY=nest_tv_refresh_token

# 功能开关配置
VITE_DANMAKU_ENABLED=true
VITE_LIVE_CHAT_ENABLED=true
VITE_RECOMMENDATIONS_ENABLED=true
VITE_OFFLINE_MODE_ENABLED=false

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=1800000
VITE_MEDIA_CACHE_ENABLED=true

# 性能监控配置
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true
VITE_ANALYTICS_ENABLED=false

# UI配置
VITE_THEME=dark
VITE_LANGUAGE=zh-CN
VITE_DARK_MODE=true

# 分页配置
VITE_PAGINATION_DEFAULT_SIZE=20
VITE_PAGINATION_MAX_SIZE=100

# 媒体播放器配置
VITE_PLAYER_AUTO_PLAY=false
VITE_PLAYER_MUTE=false
VITE_PLAYER_VOLUME=70
VITE_PLAYER_SPEED=1.0

# 图片懒加载配置
VITE_LAZY_LOADING_ENABLED=true
VITE_LAZY_LOADING_THRESHOLD=100
VITE_IMAGE_PLACEHOLDER=/placeholder.jpg

# 开发工具配置 - 生产环境禁用
VITE_DEV_TOOLS=false
VITE_CONSOLE_LOGS=false
VITE_SOURCE_MAP=false

# 生产环境安全配置
VITE_PERFORMANCE_MONITORING=false
VITE_ERROR_TRACKING=false
VITE_ANALYTICS_ENABLED=false
VITE_WEBSITE_VERIFICATION_ENABLED=false